{{#if newErrors}}
  {{#each newErrors}}
    <div class="alert alert-dismissible alert-warning">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <strong>{{this.message}}</strong>
    </div>
  {{/each}}
{{/if}}

